@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="jumbotron text-center bg-dark text-white p-5 mb-4" style="background: linear-gradient(to right, #283E51, #4B79A1);">
    <h1 class="display-4 fw-bold">Welcome to ABC Retail</h1>
    <p class="lead mb-4">Your one-stop shop for exclusive sneakers and streetwear.</p>
    <a class="btn btn-primary btn-lg shadow-sm" asp-area="" asp-controller="Products" asp-action="Index">Start Shopping</a>
</div>

<!-- Features Section -->
<div class="container marketing text-center">
    <div class="row g-4">
        <!-- Quality Products -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h4 fw-bold mb-3 text-primary">Quality Products</h2>
                    <p class="text-muted">Explore our curated collection of high-quality sneakers from top brands.</p>
                    <a class="btn btn-outline-primary mt-3" asp-area="" asp-controller="Products" asp-action="Index">View Products &raquo;</a>
                </div>
            </div>
        </div>

        <!-- Exclusive Deals -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h4 fw-bold mb-3 text-primary">Exclusive Deals</h2>
                    <p class="text-muted">Don't miss our limited-time offers on exclusive sneaker drops.</p>
                    <a class="btn btn-outline-primary mt-3" asp-area="" asp-controller="Products" asp-action="Index">Shop Now &raquo;</a>
                </div>
            </div>
        </div>

        <!-- About Us -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h4 fw-bold mb-3 text-primary">About Us</h2>
                    <p class="text-muted">Learn more about our story, mission, and the values that drive us every day.</p>
                    <a class="btn btn-outline-primary mt-3" asp-area="" asp-controller="Home" asp-action="About">About Us &raquo;</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional CSS -->
<style>
    .jumbotron {
        border-radius: 10px;
    }

    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .btn-outline-primary:hover {
            background-color: #4B79A1;
            color: white;
        }
</style>
