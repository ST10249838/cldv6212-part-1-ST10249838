@model Part1.Models.Orders

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">CustomerID</dt>
        <dd class="col-sm-10">@Model.CustomerID</dd>
        <dt class="col-sm-2">ProductID</dt>
        <dd class="col-sm-10">@Model.ProductID</dd>
        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.Size</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Colour</dt>
        <dd class="col-sm-10">@Model.Colour</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
