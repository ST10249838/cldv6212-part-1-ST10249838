@model IEnumerable<Part1.Models.Orders>

@{
    ViewData["Title"] = "Orders Index";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>CustomerID</th>
            <th>ProductID</th>
            <th>Size</th>
            <th>Quantity</th>
            <th>Colour</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerID</td>
                <td>@order.ProductID</td>
                <td>@order.Size</td>
                <td>@order.Quantity</td>
                <td>@order.Colour</td>
                <td>
                    <a asp-action="Details" asp-route-partitionKey="@order.PartitionKey" asp-route-rowKey="@order.RowKey">Details</a> |
                    <a asp-action="Edit" asp-route-partitionKey="@order.PartitionKey" asp-route-rowKey="@order.RowKey">Edit</a> |
                    <a asp-action="Delete" asp-route-partitionKey="@order.PartitionKey" asp-route-rowKey="@order.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
